<div class="table-item">
  <div class="table-item-title text-center py-2">
      <h2><%= link_to "#{poker_table.name}", poker_table_path(poker_table), class: "btn btn-success stretched-link" %></h2>

      <div class="avatarcontainer pt-3">
        <% unless poker_table.players.active.count.zero? %>
          <% poker_table.players.active.each do |player| %>
            <% if player.user.photo.attached? %>
              <%= cl_image_tag player.user.photo.key, alt: "Picture of #{player.user.nickname}", class: "avatar-medium" %>
            <% else %>
              <%= image_tag "https://avatars.dicebear.com/api/micah/#{player.user.nickname}.svg?background=%231A8A47", class: "avatar-medium" %>
            <% end %>
          <% end %>
        <% end %>
      </div>

  </div>
  <%# <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" /> %>
  <%= image_tag "table-icon.jpg" %>
  <div class="table-item-infos d-flex space-between align-items-center">
      <h2><%= "Max players: #{poker_table.max_players} " %></h2>
      <h2><%= "#{poker_table.small_blind} : Small blind" %></h2>
      <%# <p class="m-0"><%= "available seats: #{poker_table.max_players - poker_table.players.active.count}" %>
  </div>
</div>
